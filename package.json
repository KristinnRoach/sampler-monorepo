{
  "name": "sampler-monorepo",
  "version": "0.0.0",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "concurrently": "^9.1.2",
    "prettier": "^3.4.2",
    "syncpack": "^13.0.2",
    "turbo": "^2.5.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "watch": "pnpm install && pnpm run watch:sequential",
    "watch:clean": "pnpm clean && pnpm install && pnpm run watch:sequential",
    "watch:sequential": "concurrently --kill-others-on-fail --names \"audiolib,components,smali\" -c \"cyan.bold,green.bold,yellow.bold\" \"pnpm --filter @repo/audiolib watch\" \"pnpm --filter @repo/audio-components watch\"  \"pnpm --filter smali watch\" ",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "go": "turbo lint && turbo check-types && turbo build",
    "lint": "turbo run lint",
    "list-mismatches": "npx syncpack list-mismatches",
    "list-packages": "npx syncpack list",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  }
}
