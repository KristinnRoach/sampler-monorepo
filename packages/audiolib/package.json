{
  "name": "@repo/audiolib",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --emitDeclarationOnly && vite build",
    "watch": "tsc --emitDeclarationOnly --watch & vite build --watch",
    "preview": "vite preview",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf .turbo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "dexie": "^4.0.11"
  },
  "devDependencies": {
    "@types/audioworklet": "^0.0.72",
    "@vitest/coverage-v8": "3.0.9",
    "jsdom": "^26.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}
