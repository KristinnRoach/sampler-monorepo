// repo/packages/audiolib/tsconfig.json
{
  "compilerOptions": {
    "strict": true,

    "allowJs": true,
    "checkJs": false, // prevents type checking for JS files

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"], // WebWorker might be needed for worklet vite plugin config

    "declarationMap": true, // ?
    "useDefineForClassFields": true,

    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "types": ["@types/audioworklet"],

    "skipLibCheck": true,
    "declaration": true,
    "noEmit": false,

    "declarationDir": "./dist",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"], // , "src/types/worklet.d.ts"
  "exclude": ["node_modules", "dist", "src/test/*", "src/**/*.test*"]
}

