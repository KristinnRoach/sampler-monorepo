// repo/packages/audiolib/tsconfig.json
{
  "compilerOptions": {
    "strict": true,

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],

    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "declaration": true,
    "noEmit": false,

    "declarationDir": "./dist",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["src/test/*"]
      // "dexie": ["node_modules/dexie"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/test/*"] // should test be excluded?
}

