{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "skipLibCheck": true
  },
  "include": [
    "src/frameworks/react/**/*",
    "src/elements/**/*",
    "src/frameworks/shared/**/*",
    "src/types/**/*",
    "src/shared/**/*",
    "src/elementRegistry.ts",
    "src/index.ts"
  ],
  "exclude": ["src/frameworks/solidjs/**/*", "**/*.test.ts", "**/__tests__/**"]
}
