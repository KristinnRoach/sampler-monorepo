{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "skipLibCheck": true
  },
  "include": [
    "src/frameworks/solidjs/**/*",
    "src/elements/**/*",
    "src/frameworks/shared/**/*",
    "src/types/**/*",
    "src/shared/**/*",
    "src/elementRegistry.ts",
    "src/index.ts"
  ],
  "exclude": ["src/frameworks/react/**/*", "**/*.test.ts", "**/__tests__/**"]
}
