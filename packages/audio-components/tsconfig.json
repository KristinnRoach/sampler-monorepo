{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,

    // "noUnusedLocals": true, // Uncomment to clean up unused variables, functions, classes, etc.
    // "noUnusedParameters": true, // Uncomment to clean up unused function params

    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationDir": "./dist",
    "experimentalDecorators": true,

    "composite": true // Only needed if using project references
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.test.ts",
    "**/__tests__/**",

    // Framework-specific code
    "src/frameworks/react/**/*.tsx",
    "src/frameworks/react/**/*.ts",
    "src/frameworks/solidjs/**/*.tsx",
    "src/frameworks/solidjs/**/*.ts"
  ]
}
