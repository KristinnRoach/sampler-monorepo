{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "skipLibCheck": true,
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // JSX Configuration - using preserve for framework-agnostic setup
    "jsx": "preserve",

    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationDir": "./dist",
    "experimentalDecorators": true,

    "composite": true // ??? Check what exactly this does
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": [
    "**/*.test.ts",
    "**/__tests__/**",

    // Framework-specific code
    "src/frameworks/react/**/*.tsx",
    "src/frameworks/react/**/*.ts",
    "src/frameworks/solidjs/**/*.tsx",
    "src/frameworks/solidjs/**/*.ts"
  ],
  "references": [{ "path": "../audiolib" }]
}
