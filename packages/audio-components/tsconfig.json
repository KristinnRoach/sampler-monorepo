{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // JSX Configuration for SolidJS
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationDir": "./dist",
    "experimentalDecorators": true,

    "composite": true // ??? Check what exactly this does
  },
  "include": [
    "src/**/*",
    "src/shared/utils/icons/unicodes.ts",
    "src/elements/controls/envelope/env-playheads.ts",
    "src/elements/controls/envelope/EnvelopeSVG.ts",
    "src/shared/utils/icons/createWaveformIcons.ts",
    "src/elements/primitives/createSVGButton.ts",
    "src/shared/utils/icons/createSvgIcon.ts"
  ],
  "references": [{ "path": "../audiolib" }]
}
