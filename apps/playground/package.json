{
  "name": "playground",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "watch": "vite",
    "build": "pnpm clean && vite build",
    "clean": "rm -rf dist && rm -rf dev-dist ",
    "clean:deps": "rimraf node_modules && pnpm install",
    "clean:all": "rimraf dist node_modules && pnpm store prune && pnpm prune",
    "gh-deploy": "pnpm build && gh-pages -d dist -b gh-pages",
    "preview": "vite preview"
  },
  "dependencies": {
    "@repo/audio-components": "workspace:*",
    "@repo/vanjs-core": "workspace:*",
    "gsap": "^3.13.0"
  },
  "devDependencies": {
    "@vite-pwa/assets-generator": "^1.0.0",
    "typescript": "^5.8.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^3.2.4"
  }
}
